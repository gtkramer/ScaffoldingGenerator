{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "antlr",
            "command": "antlr4",
            "type":"shell",
            "args": [
                "-o",
                "${workspaceFolder}/src/IO",
                "-Dlanguage=CSharp",
                "-visitor",
                "-no-listener",
                "${workspaceFolder}/src/IO/*.g4"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/amsg.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/amsg.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/amsg.csproj"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}